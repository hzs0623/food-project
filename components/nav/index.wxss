.onewrap {
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.twowarap {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.nav-wrap {
  position: fixed;
  width: 100%;
  background: transparent;
  z-index: 9999999;
}
.nav-wrap .nav-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.nav-wrap .nav-title-back {
  width: 32rpx;
  height: 32rpx;
}
.nav-wrap .nav-title-text {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  transform: translateX(-32rpx);
}
 
